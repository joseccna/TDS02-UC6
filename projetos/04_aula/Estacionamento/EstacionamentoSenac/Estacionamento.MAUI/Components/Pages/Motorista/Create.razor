@page "/motorista/create"
@inject HttpClient Http;
@inject NavigationManager NavigationManager;
@using Estacionamento.MAUI.Models;

<h3 class="text-center mb-3">Novo Motorista</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form @onsubmit="CreateMotorista">
            <div class="form-group">
                <label for="marca" class="control-label">Nome</label>
                <input form="marca" class="form-control" @bind="motorista.Nome" />
            </div>
            <div class="form-group">
                <label for="modelo" class="control-label">VeiculoId</label>
                <input form="modelo" class="form-control" @bind="motorista.VeiculoId" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a href="/motorista" class="btn btn-light">Voltar</a>
            </div>
            
        </form>

    </div>

</div>





@code {
    Motorista motorista = new Motorista();

    async Task CreateMotorista()
    {
        await Http.PostAsJsonAsync<Motorista>("https://localhost:4000/api/Motoristas", motorista);
        NavigationManager.NavigateTo("/motorista");
    }
}

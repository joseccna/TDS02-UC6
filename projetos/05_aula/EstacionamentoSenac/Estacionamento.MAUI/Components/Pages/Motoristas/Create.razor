@page "/motoristas/create"
@inject HttpClient Http;
@inject NavigationManager NavigationManager;
@using Estacionamento.MAUI.Models;

<h3 class="text-center mb-3">Novo Motorista</h3>
<hr />



<div class="row">
    <div class="col-md-4">
        <form @onsubmit="CreateMotorista">
            <div class="form-group">
                <label for="nome" class="control-label">Nome</label>
                <input for="nome" class="form-control" @bind="motorista.Nome" />
            </div>
            <div class="form-group">
                <label for="cpf" class="control-label">CPF</label>
                <input for="cpf" class="form-control" @bind="motorista.Cpf" />
            </div>
            <div class="form-group">
                <label for="telefone" class="control-label">Telefone</label>
                <input for="telefone" class="form-control" @bind="motorista.Telefone" />
            </div>
            <div class="form-group">
                <label for="veiculo" class="control-label">veiculo</label>
                <select for="veiculo" class="form-control" @bind="motorista.Id">
                    <option value="">- Selecione um veículo -</option>
                    @if (veiculos != null)
                    {
                        @foreach (var veiculo in veiculos)
                        {
                            <option value="@veiculo.Id">@veiculo.Placa - @veiculo.Modelo</option>
                        }

                    }
                </select>

            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a href="/motoristas" class="btn btn-light">Voltar</a>
            </div>

        </form>
    </div>
</div>




@code {
    Motorista motorista = new Motorista(); // Criar o objeto
    List<Veiculo>? veiculos;

    protected override async Task OnInitializedAsync()
    {
        veiculos = await Http.GetFromJsonAsync<List<Veiculo>>("https://localhost:4000/api/veiculos");
    }

    // Chamar o endpiont
    async Task CreateMotorista()
    {
        await Http.PostAsJsonAsync("https://localhost:4000/api/motoristas", motorista);
        NavigationManager.NavigateTo("/motoristas");
    }




}

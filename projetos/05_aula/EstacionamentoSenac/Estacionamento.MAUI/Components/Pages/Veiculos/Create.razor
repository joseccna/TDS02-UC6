@page "/veiculos/create"
@using Estacionamento.MAUI.Models;
@inject HttpClient Http;
@inject NavigationManager NavigationManager;


<h3 class="text-center mb-3">Novo Veículo</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form @onsubmit="CreateVeiculo">
            <div class="form-group">
                <label for="placa" class="control-label">Placa</label>
                <input for="placa" class="form-control" @bind="veiculo.Placa" />
            </div>
            <div class="form-group">
                <label for="modelo" class="control-label">Modelo</label>
                <input form="modelo" class="form-control" @bind="veiculo.Modelo" />
            </div>
            <div class="form-group">
                <label for="cor" class="control-label">Cor</label>
                <input for="cor" class="form-control" @bind="veiculo.Cor" />
            </div>
            <div class="form-group">
                <label for="motoristaId" class="control-label">MotoristaId</label>
                <input for="motoristaId" class="form-control" @bind="veiculo.MotoristaId" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a href="/veiculos" class="btn btn-light">Voltar</a>
            </div>

        </form>
    </div>
</div>



@code {
    Veiculo veiculo = new Veiculo();

    async Task CreateVeiculo()
    {
        await Http.PostAsJsonAsync<Veiculo>("https://localhost:4000/api/veiculos/", veiculo);
        NavigationManager.NavigateTo("/veiculos");
    }

}

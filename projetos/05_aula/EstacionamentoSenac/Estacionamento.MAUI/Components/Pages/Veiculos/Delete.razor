@page "/veiculos/delete/{Id:int}"
@using Estacionamento.MAUI.Models;
@inject HttpClient Http;
@inject NavigationManager NavigationManager;

<h3>Excluir Veículo</h3>
@if (veiculo == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div>
        <h4>Tem certeza que deseja excluir este veículo?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Placa
            </dt>
            <dd class="col-sm-10">
                @veiculo.Placa
            </dd>
            <dt class="col-sm-2">
                Modelo
            </dt>
            <dd class="col-sm-10">
                @veiculo.Modelo
            </dd>
            <dt class="col-sm-2">
                Cor
            </dt>
            <dd class="col-sm-10">@veiculo.Cor</dd>
            <dt class="col-sm-2">
                MotoristaId
            </dt>
            <dd class="col-sm-10">@veiculo.MotoristaId</dd>
        </dl>
        <form @onsubmit="DeleteVeiculo">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a href="/veiculos" class="btn btn-light">Voltar</a>

        </form>

    </div>
 }


@code{
    [Parameter]
    public int Id { get; set; }
    private Veiculo? veiculo;
    protected override async Task OnInitializedAsync()
    {
        veiculo = await Http.GetFromJsonAsync<Veiculo>($"https://localhost:4000/api/veiculos/{Id}");
    }
    async Task DeleteVeiculo()
    {
        await Http.DeleteAsync($"https://localhost:4000/api/veiculos/{Id}");
        NavigationManager.NavigateTo("/veiculos");
    }
}

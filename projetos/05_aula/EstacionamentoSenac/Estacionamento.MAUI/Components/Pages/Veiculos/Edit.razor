@page "/veiculos/edit/{Id:int}"
@using Estacionamento.MAUI.Models;
@inject HttpClient Http;
@inject NavigationManager NavigationManager;


<h3>Editar Veiculo</h3>

@if (veiculo == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <form @onsubmit="UpdateVeiculo">
                <div class="form-group">
                    <label for="placa" class="control-label">Placa</label>
                    <input for="placa" class="form-control" @bind="veiculo.Placa" />
                </div>
                <div class="form-group">
                    <label for="modelo" class="control-label">Modelo</label>
                    <input form="modelo" class="form-control" @bind="veiculo.Modelo" />
                </div>
                <div class="form-group">
                    <label for="cor" class="control-label">Cor</label>
                    <input for="cor" class="form-control" @bind="veiculo.Cor" />
                </div>
                <div class="form-group">
                    <label for="motoristaId" class="control-label">MotoristaId</label>
                    <input for="motoristaId" class="form-control" @bind="veiculo.MotoristaId" />
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    <a href="/veiculos" class="btn btn-light">Voltar</a>
                </div>

            </form>
        </div>
    </div>
 }


@code {
    [Parameter]
    public int Id { get; set; }
    private Veiculo? veiculo;
    protected override async Task OnInitializedAsync()
    {
        veiculo = await Http.GetFromJsonAsync<Veiculo>($"https://localhost:4000/api/veiculos/{Id}");
    }

    async Task UpdateVeiculo()
    {
        await Http.PutAsJsonAsync<Veiculo>($"https://localhost:4000/api/veiculos/{Id}", veiculo);
        NavigationManager.NavigateTo("/veiculos");
    }




}

@page "/veiculos/delete/{id:int}"
@inject HttpClient Http
@inject NavigationManager NavigationManager
@using Estacionamento.MAUI.Models

<h3 class="text-center mb-3">Excluir Veículo</h3>

@if (veiculo == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <h4>Você tem certeza que deseja excluir este veículo?</h4>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Placa
            </dt>
            <dd class="col-sm-10">
                @veiculo.Placa
            </dd>
            <dt class="col-sm-2">
                Modelo
            </dt>
            <dd class="col-sm-10">
                @veiculo.Modelo
            </dd>
            <dt class="col-sm-2">
                Cor
            </dt>
            <dd class="col-sm-10">
                @veiculo.Cor
            </dd>
            <dt class="col-sm-2">
                Motorista
            </dt>
            <dd class="col-sm-10">
                @motorista.Nome
            </dd>

        </dl>

        <form @onsubmit="DeleteVeiculo">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a href="/veiculos" class="btn btn-light">Voltar</a>
        </form>
    </div>
}

@code {

    [Parameter]
    public int Id { get; set; }
    private Veiculo? veiculo;

    private Motorista? motorista;


    protected override async Task OnInitializedAsync()
    {
        // Lógica para carregar o veículo a ser excluído
        veiculo = await Http.GetFromJsonAsync<Veiculo>($"https://localhost:4000/api/veiculos/{Id}");



        if (veiculo != null)

        {

            motorista = await Http.GetFromJsonAsync<Motorista>($"https://localhost:4000/api/motoristas/{veiculo.MotoristaId}");

        }

    }
    private async Task DeleteVeiculo()
    {
        // Lógica para excluir o veículo
        await Http.DeleteAsync($"https://localhost:4000/api/veiculos/{Id}");
        NavigationManager.NavigateTo("/veiculos");
    }
    
}

@page "/veiculos/create"
@inject HttpClient Http
@inject NavigationManager NavigationManager
@using Estacionamento.MAUI.Models

<h3 class="text-center mb-3">Novo Ve√≠culo</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form @onsubmit="CreateVeiculo">
        <div class="mb-3">
            <label for="placa" class="form-label">Placa</label>
            <InputText id="placa" class="form-control" @bind-Value="veiculo.Placa" />
        </div>
        <div class="mb-3">
            <label for="modelo" class="form-label">Modelo</label>
            <InputText id="modelo" class="form-control" @bind-Value="veiculo.Modelo"/>
        </div>
        <div class="mb-3">
            <label for="cor" class="form-label">Cor</label>
            <InputText id="cor" class="form-control" @bind-Value="veiculo.Cor"/>
        </div>
        <div class="mb-3">
            <label for="motorista" class="form-label">Motorista</label>
             <InputSelect id="motorista" class="form-select" @bind-Value="veiculo.MotoristaId">
                <option value="0">Selecione um motorista</option>

                    @foreach (var motorista in motoristas)
                    {
                        <option value="@motorista.Id">@motorista.Nome</option>
                    }
            </InputSelect> 
        </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a href="/veiculos" class="btn btn-light">Voltar</a>
            </div>
        </form>
    </div>
</div>

@code {
    Veiculo veiculo = new Veiculo();

    List<Motorista>? motoristas = new();

    protected override async Task OnInitializedAsync()
    {
        motoristas = await Http.GetFromJsonAsync<List<Motorista>>("https://localhost:4000/api/motoristas");
    }

    async Task CreateVeiculo()
    {
        await Http.PostAsJsonAsync("https://localhost:4000/api/veiculos/", veiculo);
        NavigationManager.NavigateTo("/veiculos");
    }

}

@page "/motoristas"
@inject HttpClient Http
@using Estacionamento.MAUI.Models

<h3 class="text-center mb-3">Lista de Motoristas</h3>

<a href="/motoristas/create" class="btn btn-primary mb-3">Novo Motorista</a>

@if(motoristas == null)
{
    <p><em>Carregando...</em></p>
}
else if (!motoristas.Any())
{
    <p><em>Nenhum motorista encontrado.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
            <th>CPF</th>
            <th>Telefone</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var motorista in motoristas)
            {
                <tr>
                    <td>@motorista.Id</td>
                    <td>@motorista.Nome</td>
                    <td>@motorista.Cpf</td>
                    <td>@motorista.Telefone</td>
                    <td>
                        <a href="/motoristas/edit/@motorista.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a href="/motoristas/details/@motorista.Id" class="btn btn-sm btn-info">Detalhes</a>
                        <a href="/motoristas/delete/@motorista.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    List<Motorista>? motoristas;

    protected override async Task OnInitializedAsync()
    {
        motoristas = await Http.GetFromJsonAsync<List<Motorista>>("https://localhost:4000/api/motoristas");
    }

    
   
}
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniLoginMaui.HomePage"
             Title="Home"
             >
    <ContentPage.Content>
        
        <Grid  Padding="150" RowDefinitions="Auto,*,Auto"
                RowSpacing="18">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Image Grid.Column="0" Source="dotnet_bot.png" 
                       WidthRequest="64" HeightRequest="64"
                       VerticalOptions="Center"/>
                <StackLayout  Grid.ColumnSpan="1" VerticalOptions="Center">
                    <Label x:Name="WelcomeLabel"
                           Text="Ola, susuario!"/>
                    <Label x:Name="ProfileLabel"
                           Text="Perfil: "/>

                </StackLayout>

            </Grid>

            <StackLayout Grid.Row="1" Spacing="12">
                
                
                <Label Text="Voce entrou com sucesso na aplicacao."
                       HorizontalOptions="Center" />

                <Frame Padding="16" CornerRadius="12" 
                       BackgroundColor="White">
                
                    <StackLayout Spacing="16">
                    
                        <Label Text="Dica: " 
                                FontAttributes="Bold"
                                TextColor="DarkBlue"/>
                    
                        <Label Text="Na proxima aula, voex podem cirar a 
                               tela de cadasro sozinhos" FontSize="14" 
                               TextColor="Black"/>
                    

                    </StackLayout>
                </Frame>
                
            </StackLayout>
            
            <Button Grid.Row="2" Text="Sair e voltar ao login" 
                    
                    HorizontalOptions="Center"/>



        </Grid>
        
    </ContentPage.Content>


</ContentPage>

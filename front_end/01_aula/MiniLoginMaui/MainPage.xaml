<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniLoginMaui.MainPage"
             Title="Mini Login"
             >
    <ContentPage.Content>
        <!--padding espassamento interno / spacing margem externa do layout-->
        <StackLayout Padding="200" Spacing="16">
            
            <Label Text="Bem-vindo(a)"/>
            <Label Text="Faça seu login para continuar"/>
            <!--"ColumSpacing" espaçamento entre colunas do grid-->
            <!--RowSpacing espaçamento entre linhas do grid-->
            <Grid ColumnSpacing="8" RowSpacing="12" Margin="0,8,0,0" 
                  RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*">
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Usuario:"
                 />
                <!--Entry colocar texto dentro do campo de entrada-->
                <Entry
                    x:Name="UserNameEntry"
                    Grid.Row="0"
                    Grid.Column="1"
                    Placeholder="Digite seu usuario"
                 />
                
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Senha:"
                 />

                <Entry
                    x:Name="SenhaEntry"
                    Grid.Row="1"
                    Grid.Column="1"
                    Placeholder="Digite sua senha"
                    IsPassword="True"/> <!--ocultar a senha digitada-->

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Perfil:"
                 />

                <Picker
                    x:Name="PerfilPicker"
                    Grid.Row="2"
                    Grid.Column="1">
                    <Picker.Items>
                        <x:String>Administrador</x:String>
                        <x:String>Usuario</x:String>
                        <x:String>Convidado</x:String>
                    </Picker.Items>
                    
                </Picker>
            </Grid>
            <Button
                x:Name="LoginButton"
                Text="Entrar"
             />

            <Label
                x:Name="Feedback"
                Text="Prencha seus dados para entrar..."/>


        </StackLayout>
    </ContentPage.Content>


</ContentPage>
